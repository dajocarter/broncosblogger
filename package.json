{
  "name": "broncosblogger",
  "version": "0.0.1",
  "description": "A blog for a Random Broncos Fan",
  "scripts": {
    "build": "npm run clean && NODE_ENV=production npm run postcss && eleventy",
    "debug": "DEBUG=* eleventy",
    "watch": "eleventy --watch",
    "serve": "eleventy --serve",
    "clean": "rm -rf _site",
    "postcss": "postcss src/css/index.css > src/css/styles.css",
    "start": "npm run clean && npm run postcss && npm run serve"
  },
  "author": "RandomBroncosFan",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@tailwindcss/typography": "^0.2.0",
    "autoprefixer": "^10.0.1",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "luxon": "^1.25.0",
    "markdown-it": "^12.0.0",
    "markdown-it-emoji": "^2.0.0",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.1.0",
    "tailwindcss": "^1.9.2"
  }
}
